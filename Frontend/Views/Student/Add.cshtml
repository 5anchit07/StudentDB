@model Frontend.Models.AddStudentViewModel

@{
}

<form method="post" style="max-width: 600px; margin: 0 auto; padding: 20px; border: 1px solid #ccc; border-radius: 10px; background-color: #f9f9f9;">
    <h1 class="mt-3">Add Student</h1>
    <div class="mt-3">
        <label class="form-label" for="Name">Name</label>
        <input type="text" class="form-control" asp-for="Name" id="Name" />
    </div>
    <div class="mt-3">
        <label class="form-label" for="Email">Email</label>
        <input type="email" class="form-control" asp-for="Email" id="Email" />
    </div>
    <div class="mt-3">
        <label class="form-label" for="Phone">Phone</label>
        <input type="number" class="form-control" asp-for="Phone" id="Phone" />
    </div>
    <div class="mt-3">
        <label class="form-label" for="Address">Address</label>
        <input type="text" class="form-control" asp-for="Address" id="Address" />
    </div>
    <div class="mt-3 text-center">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>
