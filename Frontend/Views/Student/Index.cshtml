@model IEnumerable<Frontend.Models.DTO.StudentDto>
@{
    ViewData["Title"] = "Students";
}

<h1 class="mt-3">Students</h1>

<div class="d-flex justify-content-end mb-3">
    <a class="btn btn-secondary" asp-controller="Student" asp-action="Add">Add Student</a>
</div>

<table class="table table-striped table-hover">
    <thead class="thead-dark">
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Address</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.Id</td>
                <td>@student.Name</td>
                <td>@student.Email</td>
                <td>@student.Phone</td>
                <td>@student.Address</td>
                <td>
                    <div style="display: flex; align-items: center;">
                        <a class="btn btn-info btn-sm" asp-controller="Student" asp-action="Edit" asp-route-id="@student.Id" style="margin-right: 5px;">Edit</a>
                        <form asp-controller="Student" asp-action="Delete" method="post" style="display: inline;">
                            <input type="hidden" name="id" value="@student.Id" />
                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                        </form>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
